<div class="rte" id="idTabFeatures">    <table style="border-collapse:collapse; width:100%;">        <tbody>        {if $fc_features|@count > 0}            {assign var=cat_index value=0}            {foreach from=$fc_features key=k item=v}                {if $helper->checkAllowCategories($k)==false}                    {continue}                {/if}                <tr class="comparison_header">                    <td colspan=2 class="specification_category" id="{$cat_index}"                        {literal}onclick="handleCategoryClickproduct($(this)){/literal}">                        {if $cat_index>0}                            <img src="{$smarty.const._PS_JS_DIR_}../modules/featurecategories/views/img/menu_down.jpg"                                 class="img_{$cat_index}"/>                        {else}                            <img src="{$smarty.const._PS_JS_DIR_}../modules/featurecategories/views/img/menu_up.jpg"                                 class="img_{$cat_index}"/>                        {/if}                        {$k}                        {if $helper->getDescription($k) !=null}                            <img src="{$smarty.const._PS_JS_DIR_}../modules/featurecategories/views/img/question_icon.gif"                                 style="float:right; margin:0px 5px 0px 0px" class="question_image"/>                            <div class="tooltip_val" style="display:none;">{$helper->getDescription($k)}</div>                        {/if}                    </td>                </tr>                {foreach from=$v item=fcFeature}                    {if not empty($fcFeature.value)}                        <tr class="feature_{$cat_index}" {if $cat_index>0}style="display: none"{/if}>                            <td class="feature-col1">{$fcFeature.name}                                {assign var=featureDescription value=$helper->getProductDescription($fcFeature.id_feature)}                                {if $featureDescription!=null}                                    <img src="{$smarty.const._PS_JS_DIR_}../modules/featurecategories/views/img/question_icon.gif"                                         style="float:right;margin:3px 5px 0px 0px" class="question_image"/>                                    <div class="tooltip_val" style="display:none;">{$featureDescription}</div>                                {/if}                            </td>                            <td class="feature-col2" >{$fcFeature.value}</td>                        </tr>                    {/if}                {/foreach}                {assign var=cat_index value=$cat_index+1}            {/foreach}        {/if}        </tbody>    </table>    <div class="specification_disclaimer_block">        <p><strong>Disclaimers:</strong></p>        <ol>            <li>Specifications are subject to change without notice. Please call or write to us in case you would like to be doubly sure. For material which is not as per specifications, full refund is possible within 3 days of delivery or free replacement is available within 30 days of purchase.</li>            <li>Press on <img                        src="{$smarty.const._PS_JS_DIR_}../modules/featurecategories/views/img/menu_down.jpg"                        class="specification_collapse"/> to expand                and <img src="{$smarty.const._PS_JS_DIR_}../modules/featurecategories/views/img/menu_up.jpg"                         class="specification_collapse"/> to collapse the rows.            </li>        </ol>        {*<p>&nbsp;&nbsp;1. </p>*}        {*<p>&nbsp;&nbsp;2. *}        {*</p>*}    </div></div>